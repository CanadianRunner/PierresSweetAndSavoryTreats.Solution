@{
  Layout = "_Layout";
}

@model Bakery.Models.Treat

<h2>Edit Treat:</h2>

<h4>Edit this flavour below: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)
  @Html.LabelFor(model => model.Description)
  @Html.EditorFor(model => model.Description)

  <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to Treats", "Index")</p>
<button>@Html.ActionLink("Home", "Index", "Home")</button>